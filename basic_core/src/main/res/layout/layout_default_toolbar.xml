<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/frame_toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="90px">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34px"
        android:textColor="@color/black"

        android:visibility="gone"
        android:gravity="right"
        android:layout_centerInParent="true"
        android:id="@+id/tv_title"
        />

    <!-- 默认的BackVIew -->
    <com.hxh.component.basicore.CommonConponet.DefaultBackButton
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="20px"
        android:minWidth="200px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_title"
        android:layout_marginRight="40px"
        android:id="@+id/btn_defaultback"

        android:layout_height="match_parent">


    </com.hxh.component.basicore.CommonConponet.DefaultBackButton>>

    <!-- 默认的右边按钮 -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="45px"
        android:gravity="right|center"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:background="@color/transparent"
        android:id="@+id/btn_rightview"
        android:textSize="28px"
        android:minWidth="60px"
        android:layout_toRightOf="@id/tv_title"

        android:paddingRight="22px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        />


    <!-- 默认的图标 -->
    <LinearLayout
        android:layout_width="260px"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/linear_actionbar_right"
        android:layout_marginRight="20px"
        android:gravity="right"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"

        android:layout_height="match_parent">

        <ImageView
            android:layout_width="48px"
            android:layout_height="48px"
            android:maxWidth="48px"
            android:maxHeight="48px"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_gravity="right|center_vertical"
            android:id="@+id/actionbar_rightview_img"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#999999"
        android:alpha="0.2"
        android:id="@+id/view_splitline"
        />

</com.zhy.autolayout.AutoRelativeLayout>
